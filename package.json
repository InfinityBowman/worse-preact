{
  "name": "worse-preact",
  "version": "1.0.0",
  "description": "A minimal, readable Preact-compatible virtual DOM library",
  "author": "Jacob Maynard",
  "main": "src/index.js",
  "type": "module",
  "exports": {
    ".": "./src/index.js",
    "./hooks": "./src/hooks.js",
    "./devtools": "./src/devtools.js",
    "./hmr": "./src/hmr.js"
  },
  "scripts": {
    "dev:jsx": "vite --config vite.config.jsx.js",
    "dev:htm": "vite --config vite.config.htm.js",
    "build": "vite build",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --no-watchman",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch --no-watchman"
  },
  "keywords": [
    "preact",
    "vdom",
    "virtual-dom",
    "react"
  ],
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "vite": "^7.3.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {},
    "moduleFileExtensions": [
      "js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "watchPathIgnorePatterns": [
      "node_modules"
    ],
    "injectGlobals": true
  }
}
